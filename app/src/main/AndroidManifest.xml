<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.wit.hillfort">

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <application
    android:name=".main.MainApp"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <uses-library
      android:name="org.apache.http.legacy"
      android:required="false" />

    <activity
      android:name=".activities.SplashActivity"
      android:configChanges="orientation|keyboardHidden|screenSize"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".activities.LandingActivity" />
    <activity
      android:name=".views.signup.SignupView"
      android:parentActivityName=".activities.LandingActivity" />
    <activity
      android:name=".activities.LoginActivity"
      android:parentActivityName=".activities.LandingActivity" />
    <activity android:name=".activities.HillfortListActivity" />
    <activity
      android:name=".activities.ProfileActivity"
      android:parentActivityName=".activities.HillfortListActivity" />
    <activity
      android:name=".views.settings.SettingsView"
      android:parentActivityName=".activities.ProfileActivity" />
    <activity
      android:name=".views.hillfort.HillfortView"
      android:parentActivityName=".activities.HillfortListActivity" />

    <meta-data
      android:name="com.google.android.maps.v2.API_KEY"
      android:value="{GOOGLE_API_KEY}" />

    <activity
      android:name=".activities.MapsActivity"
      android:label="@string/title_activity_maps" />
    <activity
      android:name=".activities.BaseActivity"
      android:label="@string/title_activity_main"
      android:theme="@style/AppTheme"></activity>
  </application>

</manifest>